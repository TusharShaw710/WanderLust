<% layout("/layouts/boilerplate")-%>

    <h3 class="header">All Listings</h3>
    
    <div class="row row-col-lg-3">


        <%for(let list of listing){%>
           
                
                <div class="card-list" style="width: 20rem;">
                    <a href="/listings/<%=list._id%>">
                        
                        <img src="<%=list.image.url%>" class="card-img-top" alt="listing_image">
                        <div class="card-body">
                          <p class="title"><b><%=list.title%></b><br>
                            &#8377;<%=list.price.toLocaleString("en-IN")%>/night
                        </p>
                          
                        </div>
                    </a>
                </div>
            
        <%}%>  
    </div>




        
            
    

